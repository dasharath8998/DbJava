<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/form_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_app" />

    <com.wang.avi.AVLoadingIndicatorView
        android:elevation="@dimen/_1sdp"
        android:id="@+id/aviLoading"
        style="@style/AVLoadingIndicatorView"
        android:visibility="gone"
        android:layout_width="@dimen/_50sdp"
        android:layout_centerInParent="true"
        app:indicatorName="BallScaleMultipleIndicator"
        app:indicatorColor="@color/colorPrimaryDark"
        android:layout_height="@dimen/_50sdp"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/custom_square_border"
                android:src="@drawable/ic_request" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext"
                    android:hint="Your Name"
                    android:textSize="@dimen/_11sdp"
                    android:inputType="textCapSentences"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/etFName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_11sdp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Father Name"
                    android:inputType="textCapSentences"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp" />

                <EditText
                    android:id="@+id/etSName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext"
                    android:hint="Surname"
                    android:textSize="@dimen/_11sdp"
                    android:inputType="textCapSentences"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp" />

            </LinearLayout>


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/custom_edittext"
                android:textSize="@dimen/_12sdp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="0dp"
                    android:focusable="false"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:hint="Select your birth date" />

                <ImageView
                    android:id="@+id/btnCalender"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_calendar"
                    android:padding="5dp"
                    android:tint="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:background="@drawable/custom_edittext"
                    android:padding="@dimen/_8sdp"
                    android:text="Your Age:"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/rGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rBMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext"
                    android:checked="true"
                    android:padding="@dimen/_5sdp"
                    android:text="Male"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rBFemale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edittext"
                    android:padding="@dimen/_5sdp"
                    android:text="Female"
                    android:textSize="20sp" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:background="@color/gray_status"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Parent Residence"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/etPResidence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/custom_edittext"
                android:hint="e.g. Maliya (Hatina)"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="@dimen/_9sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Current Location"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/etCLocationo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/custom_edittext"
                android:hint="e.g. Ahmedabad"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:padding="@dimen/_9sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Address:"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="8"
                android:maxLines="10"
                android:textSize="@dimen/_12sdp"
                android:minLines="6"
                android:padding="@dimen/_5sdp"
                android:hint="e.g. Maharana Pratap Chowk,\nStation Road,\nMaliya (Hatina)-362245,\nDist: Junagadh"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNextCommon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_buttons"
                    android:text="Next"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:background="@drawable/custom_buttons"
                    android:text="Cancel"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>